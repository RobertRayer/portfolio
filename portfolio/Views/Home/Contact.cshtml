@model Portfolio.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<h1>Contact Me</h1>
<hr />
<form asp-action="Contact">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        @Html.LabelFor(x => x.FromAddress)
    </div>
    <div>
        @Html.EditorFor(x => x.FromAddress, new { htmlAttributes = new { @class = "contact-form-editor" } })
    </div>
    <div>
        @Html.LabelFor(x => x.FromName)
    </div>
    <div>
        @Html.EditorFor(x => x.FromName, new { htmlAttributes = new { @class = "contact-form-editor" } })
    </div>
    <div>
        @Html.LabelFor(x => x.Subject)
    </div>
    <div>
        @Html.EditorFor(x => x.Subject, new { htmlAttributes = new { @class = "contact-form-editor" } })
    </div>
    <div>
        @Html.LabelFor(x => x.Body)
    </div>
    <div>
        @Html.EditorFor(x => x.Body, new { htmlAttributes = new { @class = "contact-form-editor" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
