<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Robert Rayer</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fa fa-home pr-1" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="resume">
                <span class="fa fa-file pr-1" aria-hidden="true"></span> Resume
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="contact">
                <span class="fa fa-envelope pr-1" aria-hidden="true"></span> Contact
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="https://github.com/RobertRayer/portfolio" target="_blank" rel="noreferrer">
                <span class="fab fa-github pr-1" aria-hidden="true"></span> Source
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="https://www.linkedin.com/in/robert-rayer" target="_blank" rel="noreferrer">
                <span class="fab fa-linkedin pr-1" aria-hidden="true"></span> LinkedIn
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="https://robertrayer.azurewebsites.net/">
                <span class="fa fa-code-branch pr-1" aria-hidden="true"></span> View in ASP.NET Core
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}